<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout

        android:paddingLeft="@dimen/common10dp"
        android:paddingRight="@dimen/common10dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/common10dp"
            android:layout_marginBottom="@dimen/common10dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/text_color_normal"
                android:lines="2"
                android:lineSpacingExtra="@dimen/common4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="济南多少热价开发商的解放垃圾可垃圾费咖啡拉风"
                />

             <LinearLayout
                 android:layout_marginTop="@dimen/common10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">

                 <TextView
                     android:textColor="@color/text_color_gray"
                     android:textSize="@dimen/text_size_12sp"
                     android:text="2015-5-17"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_marginLeft="@dimen/common10dp"
                     android:textColor="@color/text_color_gray"
                     android:textSize="@dimen/text_size_12sp"
                     android:text="89阅读"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>


        </LinearLayout>

  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="4"
      android:gravity="center_vertical|right"
      android:paddingTop="@dimen/common10dp"
      android:paddingBottom="@dimen/common10dp"

      android:layout_height="match_parent">

      <com.ecloud.rcsd.widget.TouTiaoImageView
          android:src="@drawable/banner"
          android:scaleType="centerCrop"
          android:layout_width="@dimen/common100dp"
          android:layout_height="wrap_content"/>
  </LinearLayout>

    </LinearLayout>






      <View style="@style/Divider" android:layout_marginBottom="1px"></View>
</LinearLayout>